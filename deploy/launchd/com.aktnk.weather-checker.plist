<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.aktnk.weather-checker</string>

    <key>ProgramArguments</key>
    <array>
        <string>/opt/weather-checker/tauri-weather-checker</string>
    </array>

    <key>WorkingDirectory</key>
    <string>/opt/weather-checker</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>RUST_LOG</key>
        <string>tauri_weather_checker=info</string>
    </dict>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <true/>

    <key>ThrottleInterval</key>
    <integer>30</integer>

    <key>StandardOutPath</key>
    <string>/opt/weather-checker/data/stdout.log</string>

    <key>StandardErrorPath</key>
    <string>/opt/weather-checker/data/stderr.log</string>
</dict>
</plist>
